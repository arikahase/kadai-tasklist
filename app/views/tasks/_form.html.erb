<div class="row">
  <%= form_for(task) do |f| %>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
        
        <ul>
          <% task.errors.full_messages.each do |task| %>
            <li><%= task %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="col-xs-12 col-sm-offset-2 col-sm-6 col-lg-offset-3 col-lg-3">
      <%= f.label :content, 'タスク' %>
      <%= f.text_field :content %>
    </div>
    
    <div class="col-xs-12 col-sm-offset-2 col-sm-6 col-lg-offset-3 col-lg-3">
      <%= f.label :status, 'ステータス' %>
      <%= f.text_field :status %>
    </div>
    
    <%= f.submit '投稿', class: 'btn btn-primary' %>
    
  <% end %>
</div>
